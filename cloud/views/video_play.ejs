    <script src="assets/plugins/jquery-1.10.1.min.js" type="text/javascript"></script>
    
    <style type="text/css">
    	body{
    		background:gray;
			font-family:Georgia, serif;;
    	}
	    .page-container{
	    	width: 100%;
	    	height: 100%;
	    	margin: auto;
	    	//background:gray;
	    }
	    .video{
			margin:0 auto;
			width:80%;
			//background:red;
			//text-align:center;
			padding-top:10px;
			padding-bottom:30px;
	    }
	    .title{
			margin:0 auto;
			width:80%;
			//background:green;
			//text-align:center;
			
	    }
	    .content{
			margin:0 auto;
			width:80%;
			background:white;
			//text-align:center;
	    }
    </style>
</head>
<body>
    <div class="page-container">
		 <div class="title">
		 		<h2 id="titleid"></h2>
 		 </div>
		 <div class="video">
		 		<video width="100%" controls='controls' poster='assets/img/mockup/no-image.png' src='' type='video/mp4' id="videoid"></video>
 		 </div>
		 <div class="content" id="contentid">
		 		
 		 </div>
 	</div>
	
    <script src="https://cn.avoscloud.com/scripts/lib/av-0.4.1.min.js"></script>
    <script>
        jQuery(document).ready(function () {
            //
            AV.initialize("y8cwz5xanjtclwys0cm6ucb07vrccr8oedicxznhcr9zwbwd", "bkzhoupdt3mjaze7y9kphdmguyxfjbp5nib9rmjtneyuwrk5");
			
			var vClass = AV.Object.extend("video");
			var query = new AV.Query(vClass);
			query.get('<%= message %>', {
				success: function(object) {
				
				var videoObj = object.get('video');
				if(videoObj){
					$("#videoid").attr("src",videoObj.url());					
				}
				var imageObj = object.get('image');
				if(imageObj){
					$("#videoid").attr("poster",imageObj.url());						
				}
				
				var title = object.get('title');
				if(title){
					$('#titleid').text(title);
				}
				
				var content = object.get('content');
				if(content){
					$('#contentid').text(content);
				}
				
			},error: function(object, error) {
					alert(222);
				}
			});

        });   
    </script>	
</body>
